#!/usr/bin/env bash
#    __  __          __      __
#   / / / /___  ____/ /___ _/ /____  _____
#  / / / / __ \/ __  / __ `/ __/ _ \/ ___/
# / /_/ / /_/ / /_/ / /_/ / /_/  __(__  )
# \____/ .___/\__,_/\__,_/\__/\___/____/
#     /_/
# Script to check for new updates in Gentoo or Arch Linux.
# Supports one-shot exclusion of packages.
# AUTHOR: MHD

# -------------------------------
# Detect distribution
# -------------------------------
detect_distro() {
    if [[ -f /etc/os-release ]]; then
        . /etc/os-release
        case "$ID" in
        gentoo) echo "gentoo" ;;
        arch) echo "arch" ;;
        *) echo "unknown" ;;
        esac
    else
        echo "unknown"
    fi
}

# -------------------------------
# Gentoo functions
# -------------------------------
get_total_updates_gentoo() {
    local total_updates
    emerge --sync --quiet >/dev/null 2>&1
    total_updates=$(emerge -puDN @world 2>/dev/null | grep -c "^

\[ebuild" || echo 0)
    echo "${total_updates:-0}"
}

get_list_updates_gentoo() {
    echo -e "\033[1m\033[34mAvailable updates:\033[0m"
    emerge -puDN @world 2>/dev/null |
        grep "^

\[ebuild" |
        { [[ -n "$EXCLUDE" ]] && grep -v "$EXCLUDE" || cat; } |
        sed 's/

\[ebuild/\x1b[32;1m[ebuild\x1b[0m/g'
}

get_list_overlay_updates_gentoo() {
    if command -v layman >/dev/null 2>&1; then
        echo -e "\n\033[1m\033[34mOverlay updates:\033[0m"
        layman -S >/dev/null 2>&1
        emerge -puDN @world 2>/dev/null |
            grep "^

\[ebuild.*::" |
            { [[ -n "$EXCLUDE" ]] && grep -v "$EXCLUDE" || cat; } |
            sed 's/

\[ebuild/\x1b[32;1m[ebuild\x1b[0m/g'
    elif command -v eselect >/dev/null 2>&1 && eselect repository list >/dev/null 2>&1; then
        echo -e "\n\033[1m\033[34mRepository updates:\033[0m"
        emerge --sync --quiet >/dev/null 2>&1
        emerge -puDN @world 2>/dev/null |
            grep "^

\[ebuild.*::" |
            { [[ -n "$EXCLUDE" ]] && grep -v "$EXCLUDE" || cat; } |
            sed 's/

\[ebuild/\x1b[32;1m[ebuild\x1b[0m/g'
    fi
}

print_updates_gentoo() {
    local total
    total=$(get_total_updates_gentoo)
    if [[ "$total" -gt 0 ]]; then
        echo -e "\033[1m\033[33mThere are $total updates available:\033[0m\n"
        get_list_updates_gentoo
        get_list_overlay_updates_gentoo
    else
        echo -e "\033[1m\033[32mYour system is already updated!\033[0m"
    fi
}

update_system_gentoo() {
    echo "Syncing portage tree..."
    emerge --sync
    echo "Updating system..."
    if [[ -n "$EXCLUDE" ]]; then
        emerge -uDN @world --exclude "$EXCLUDE"
    else
        emerge -uDN @world
    fi
}

# -------------------------------
# Arch functions (paru preferred)
# -------------------------------
detect_arch_pkgmgr() {
    if command -v paru >/dev/null 2>&1; then
        echo "paru"
    elif command -v pacman >/dev/null 2>&1; then
        echo "pacman"
    else
        echo "none"
    fi
}

# Build a comma-separated list of packages matching a pattern from paru -Qu
build_exclude_list_arch() {
    local pattern="$1"
    paru -Qu 2>/dev/null |
        grep -i "$pattern" |
        awk '{printf "%s%s", $1, (NR==NF ? "" : ",")}'
}

get_total_updates_arch() {
    local pkgmgr
    pkgmgr=$(detect_arch_pkgmgr)
    case "$pkgmgr" in
    paru) paru -Qu 2>/dev/null | { [[ -n "$EXCLUDE" ]] && grep -v "$EXCLUDE" || cat; } | wc -l ;;
    pacman) checkupdates 2>/dev/null | { [[ -n "$EXCLUDE" ]] && grep -v "$EXCLUDE" || cat; } | wc -l ;;
    *) echo 0 ;;
    esac
}

print_updates_arch() {
    local pkgmgr total expanded
    pkgmgr=$(detect_arch_pkgmgr)
    total=$(get_total_updates_arch)

    if [[ -n "$EXCLUDE" ]]; then
        expanded=$(build_exclude_list_arch "$EXCLUDE")
        echo -e "\033[1m\033[31mExcluding packages matching: $EXCLUDE â†’ $expanded\033[0m\n"
    fi

    if [[ "$total" -gt 0 ]]; then
        echo -e "\033[1m\033[33mThere are $total updates available:\033[0m\n"
        case "$pkgmgr" in
        paru)
            paru -Qu | { [[ -n "$EXCLUDE" ]] && grep -vi "$EXCLUDE" || cat; }
            ;;
        pacman)
            checkupdates | { [[ -n "$EXCLUDE" ]] && grep -vi "$EXCLUDE" || cat; }
            ;;
        esac
    else
        echo -e "\033[1m\033[32mYour system is already updated!\033[0m"
    fi
}

update_system_arch() {
    local pkgmgr expanded
    pkgmgr=$(detect_arch_pkgmgr)
    echo "Updating system with $pkgmgr..."
    case "$pkgmgr" in
    paru)
        if [[ -n "$EXCLUDE" ]]; then
            expanded=$(build_exclude_list_arch "$EXCLUDE")
            echo "Excluding: $expanded"
            paru -Syu --ignore "$expanded"
        else
            paru -Syu
        fi
        ;;
    pacman)
        if [[ -n "$EXCLUDE" ]]; then
            # pacman doesn't have AUR, so just ignore literal or glob
            echo "Excluding: $EXCLUDE"
            sudo pacman -Syu --ignore "$EXCLUDE"
        else
            sudo pacman -Syu
        fi
        ;;
    *) echo "No supported package manager found." ;;
    esac
}

# -------------------------------
# Argument parsing
# -------------------------------
EXCLUDE=""
ARGS=()

while [[ $# -gt 0 ]]; do
    case "$1" in
    --exclude)
        shift
        EXCLUDE="$1"
        ;;
    *)
        ARGS+=("$1")
        ;;
    esac
    shift
done

DISTRO=$(detect_distro)

# -------------------------------
# Dispatcher
# -------------------------------
case "${ARGS[0]}" in
--total)
    if [[ "$DISTRO" == "gentoo" ]]; then
        get_total_updates_gentoo
    elif [[ "$DISTRO" == "arch" ]]; then
        get_total_updates_arch
    else
        echo "Unsupported distribution."
    fi
    ;;
--list)
    if [[ "$DISTRO" == "gentoo" ]]; then
        print_updates_gentoo
    elif [[ "$DISTRO" == "arch" ]]; then
        print_updates_arch
    else
        echo "Unsupported distribution."
    fi
    ;;
--update)
    if [[ "$DISTRO" == "gentoo" ]]; then
        update_system_gentoo
    elif [[ "$DISTRO" == "arch" ]]; then
        update_system_arch
    else
        echo "Unsupported distribution."
    fi
    ;;
--help | *)
    echo -e "Updates [options]

Options:
    --total             Get the number of updates available.
    --list              Print the list of available packages to update.
    --update            Update your system.
    --exclude <pkg>     Exclude a package (and its deps) just for this run.
"
    ;;
esac
